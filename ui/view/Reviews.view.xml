<mvc:View
    controllerName="sap.demo.bulletinboard.controller.Reviews"
    xmlns:mvc="sap.ui.core.mvc"
	xmlns:l="sap.ui.layout"
	xmlns:core="sap.ui.core"
    xmlns:semantic="sap.m.semantic"
	xmlns="sap.m">

	<semantic:FullscreenPage title="Bulletin Board Reviews">
		<semantic:content>
        <List
            items="{/}"
            id="reviewList"
            growing="true"
            growingThreshold="4"
            growingScrollToLoad="false">
            <StandardListItem
                title="{reviewer_email}"
                description="{comment}"
                iconDensityAware="false"
                iconInset="false" />
        </List>
		</semantic:content>

        <semantic:addAction>
            <semantic:AddAction press="onCreateAd"/>
        </semantic:addAction>
        <semantic:customFooterContent>
            <!-- <Button text="Delete Ads" press="onDeleteAds"/> -->
            <OverflowToolbarButton icon="sap-icon://delete" text="Delete Ads" press="onDeleteAds"/>
            <OverflowToolbarButton icon="sap-icon://filter" text="Filter" press="onFilterAds"/>
        </semantic:customFooterContent>
        
	</semantic:FullscreenPage>
</mvc:View>
